@page
@model LoginModel

@{
	ViewData["Title"] = "Login";
}

<style>
	div.my-card{
		display: flex;
		flex:1;
		align-self: center;
		align-items: center;
		justify-content: center;
		background-color: #FFF;
		width: 600px;
	};
	div.my-card-body{
		padding:10px;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
</style>

<div class="card">
	<div class="card-body">
		<div class="row align-center">
			<div class="col-md-4">
				<section>
					<form id="account" method="post">
						<div asp-validation-summary="All" class="text-danger">
						</div>
						<div class="form-group">
							<label asp-for="Input.Email"></label>
							<input asp-for="Input.Email" class="form-control" />
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Input.Password"></label>
							<input asp-for="Input.Password" class="form-control" />
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="form-group">
							<div class="checkbox">
								<label asp-for="Input.RememberMe">
									<input asp-for="Input.RememberMe" />
									@Html.DisplayNameFor(m => m.Input.RememberMe)
								</label>
							</div>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-outline-primary" style="width: 100%;">Entrar</button>
						</div>
						<div class="form-group">
							<p>
								<a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a Senha?</a>
							</p>
							<p>
								<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Ainda n√£o tem conta?</a>
							</p>
							<p>
								@* <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a> *@
							</p>
						</div>
					</form>
				</section>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
